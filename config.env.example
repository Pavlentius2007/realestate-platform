# ========================================
# WHITE LABEL CONFIGURATION
# ========================================
# Скопируйте этот файл в .env и настройте под ваши нужды

# ========================================
# БРЕНДИНГ
# ========================================
# Название компании
BRAND_NAME=Sianoro

# Слоган компании
BRAND_TAGLINE=Ваш надежный партнер в сфере недвижимости в Таиланде

# Основной цвет бренда (hex)
PRIMARY_COLOR=#0074E4

# Вторичный цвет (hex)
SECONDARY_COLOR=#005bb5

# Акцентный цвет (hex)
ACCENT_COLOR=#3b82f6

# ========================================
# КОНТАКТЫ
# ========================================
# Телефон
CONTACT_PHONE=+66 95 386 2858

# WhatsApp
CONTACT_WHATSAPP=+66 95 386 2858

# Telegram
CONTACT_TELEGRAM=t.me/InvestThailand

# Email
CONTACT_EMAIL=info@sianoro.com

# Адрес офиса
CONTACT_ADDRESS=Паттайя, Таиланд

# ========================================
# ФУНКЦИИ
# ========================================
# Включить инвестиционный калькулятор
ENABLE_CALCULATOR=true

# Включить ИИ-ассистент
ENABLE_AI_ASSISTANT=true

# Включить избранное
ENABLE_FAVORITES=true

# Включить статьи
ENABLE_ARTICLES=true

# Включить проекты
ENABLE_PROJECTS=true

# Включить аренду
ENABLE_RENTAL=true

# ========================================
# АНАЛИТИКА
# ========================================
# Google Analytics ID
GOOGLE_ANALYTICS_ID=

# Yandex Metrika ID
YANDEX_METRIKA_ID=

# Facebook Pixel ID
FACEBOOK_PIXEL_ID=

# ========================================
# SEO
# ========================================
# Заголовок сайта
SITE_TITLE=Sianoro - Недвижимость в Таиланде

# Описание сайта
SITE_DESCRIPTION=Найдите идеальную недвижимость для жизни и инвестиций в Паттайе

# Ключевые слова
SITE_KEYWORDS=недвижимость, таиланд, паттайя, квартиры, виллы, инвестиции

# ========================================
# ПЛАТЕЖИ
# ========================================
# Валюта
CURRENCY=THB

# Символ валюты
CURRENCY_SYMBOL=฿

# Включить платежи
ENABLE_PAYMENTS=false

# ========================================
# БАЗА ДАННЫХ
# ========================================
DATABASE_URL=sqlite:///./realestate.db

# ========================================
# БЕЗОПАСНОСТЬ
# ========================================
SECRET_KEY=your-super-secret-key-here 